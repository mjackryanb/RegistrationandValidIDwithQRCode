@model ValidIdv3.Models.ValidIdClass

@{
    ViewBag.Title = "Pre-registration";
}
<style>
    body {
        background: url("../img/preregform.jpg");
        background-repeat: no-repeat;
        background-size: cover;
    }

    h5 {
        margin: 0;
        font-size: 48px;
        font-weight: 700;
        line-height: 1.2;
        color: var(--color-default);
        font-family: var(--font-secondary);
        text-align: center;
    }

    .form-fullname {
        color: var(--color-default2);
        font-weight: 500;
    }

    .form-mobilenumber {
        color: var(--color-default2);
        font-weight: 500;
    }

    .form-dateofvisit {
        color: var(--color-default2);
        font-weight: 500;
    }

    .form-department {
        color: var(--color-default2);
        font-weight: 500;
    }

    .form-purposeofvisit {
        color: var(--color-default2);
        font-weight: 500;
    }

    .form-gender {
        color: var(--color-default2);
        font-weight: 500;
    }

    .form-validid {
        color: var(--color-default2);
        font-weight: 500;
    }

    .form-selfie {
        color: var(--color-default2);
        font-weight: 500;
    }

    .radio-gender {
        color: var(--color-default2);
    }

    .reg-date{
        width: 200px;
    }

    .reg-department {
        width: 200px;
    }

    .card{
        height: 620px;
        width: 850px;
        margin: 0 auto;
    }
</style>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <section id="prereg" class="prereg">
        <div class="form-vertical">
            <div class="container body-content">
                <h5>Register your visit here</h5>
                <br />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="card" style="border-radius: 15px;">
                    <div class="card-body">

                        <div class="form-group">
                            <div class="form-row">
                                <label class="form-fullname">What is your name?</label><br />
                                @*Html.EditorFor(model => model.FullName, new { htmlAttributes = new { @class = "form-control" } })*@
                                <input type="text" 
                                       id="form-fullname" 
                                       name="@Html.NameFor(model => model.FullName)" 
                                       size="50" 
                                       required title="Enter your full name">
                                @Html.ValidationMessageFor(model => model.FullName, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <br />

                        <div class="form-group">
                            <label class="form-mobilenumber">What is your mobile number?</label>
                            <div class="col-md-10">
                                @*Html.EditorFor(model => model.MobileNumber, new { htmlAttributes = new { @class = "form-control" } })*@
                                <input type="text"
                                       id="form-mobilenumber"
                                       name="@Html.NameFor(model => model.MobileNumber)"
                                       size="50"
                                       required title="Enter your mobile number">
                                @Html.ValidationMessageFor(model => model.MobileNumber, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <br />

                        <div class="form-group">
                            <label class="form-dateofvisit">When is your date of visit?</label>
                            <div class="col-md-10">
                                @*@Html.EditorFor(model => model.DateofVisit, new { htmlAttributes = new { @class = "form-control" } })*@
                                <input type="date" 
                                       class="reg-date" 
                                       name="@Html.NameFor(model => model.DateofVisit)" 
                                       required title="Enter the date of visit">
                                @Html.ValidationMessageFor(model => model.DateofVisit, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <br />

                        <div class="form-group">
                            <label class="form-department">Which department are you going to visit?</label>
                            <div class="col-md-10">
                                @*@Html.EditorFor(model => model.Department, new { htmlAttributes = new { @class = "form-control" } })*@
                                <select name="@Html.NameFor(model => model.Department)" 
                                        class="reg-department" 
                                        required title="Enter the department for the visit">
                                    <option value="" selected disabled></option>
                                    <option>Accounting</option>
                                    <option>Finance</option>
                                    <option>Bookstore</option>
                                    <option>Admissions</option>
                                    <option>Academic Affairs</option>
                                </select>
                                @Html.ValidationMessageFor(model => model.Department, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <br />

                        <div class="form-group">
                            <label class="form-purposeofvisit">What is your purpose of visit?</label>
                            <div class="col-md-10">
                                @*Html.EditorFor(model => model.PurposeofVisit, new { htmlAttributes = new { @class = "form-control" } })*@
                                <input type="text"
                                       id="form-purposeofvisit"
                                       name="@Html.NameFor(model => model.PurposeofVisit)"
                                       size="50"
                                       required title="Enter the purpose of the visit">
                                @Html.ValidationMessageFor(model => model.PurposeofVisit, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <br />

                        <div class="form-group">
                            <label class="form-validid">Upload a picture of your valid ID.</label>
                            <div class="col-md-10">
                                <input type="file" 
                                       name="@Html.NameFor(model => model.ValidID)"
                                       required title="Upload your Valid ID picture">
                                @Html.ValidationMessageFor(model => model.ValidID, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <br />

                        <div class="form-group">
                            <label class="form-selfie">Upload a selfie.</label>
                            <div class="col-md-10">
                                <input type="file" 
                                       name="@Html.NameFor(model => model.Selfie)"
                                       required title="Upload your selfie picture">
                                @*<input type="file" id="user" capture="user" accept=".jpeg,.jpg,.png" />*@
                                @Html.ValidationMessageFor(model => model.Selfie, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <br />

                     
                            <div class="col-md-12 text-center">
                                <input type="submit" value="Submit" class="btn btn-outline-primary btn-lg" />
                            </div>
                        
                    </div>
                </div>
            </div>
        </div>
    </section>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
